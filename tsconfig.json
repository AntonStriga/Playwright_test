{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "build",
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "skipLibCheck": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "useUnknownInCatchVariables": false,
        "forceConsistentCasingInFileNames": true,
    },
    "exclude": ["playwright.config.ts"]
}